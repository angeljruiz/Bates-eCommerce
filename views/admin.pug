extends ../includes/layout.pug

append resources
  title Admin

append body
  .col-md-10.mx-auto
    .card
        h1.card-header.text-center Admin
        ul.list-group
          .card
            .card-body
              a.btn.btn-primary(href='/addfish') Add fish
    each fish in fishes
      .card
        a(href='/editfish/' + fish.id)
          .card-body
            h5.card-title= fish.name
