extends ../includes/layout.pug

append resources
  title Shark Reef Exotics
    
append body
  .col-xs-12.col-lg-6.ml-auto.mb-2
    .card
      .card-header Review Your Order
      .card-body
        if (flash.length > 0)
          .alert.alert-primary.text-center
            = flash
        .row
          .col-6
            h6 Customer Info
            span=fn + ' ' + ln
            br
            span=pn
          .col-6
            h6 Order Info
            span.font-weight-bold.small Pickup Date: 
            p=pd
            span.font-weight-bold.small Order Date: 
            p=date
            
  .col-xs-12.col-lg-4.order-xs-12.mr-auto 
    .card#order-card
      .card-header Order 
      .card-body
        .row
          .col-6.text-left
            span.font-weight-bold Subtotal:
            br 
            span Sales tax:
          .col-6.text-right
            span.font-weight-bold $#{cart.total}
            br
            span $#{(cart.total*.086).toFixed(2)}
        hr
        .row 
          .col-6.text-left
            strong Total
          .col-6.text-right.font-weight-bold= (cart.total*1.086).toFixed(2)
        if (processing)
          a(href='/placeorder')
            button.btn.btn-outline-primary.form-control.mt-2 Place Order
  .col-xs-12.col-lg-6.order-xs-1.ml-auto.mt-2
    .card#item-card.mb-3
      .card-header Items
      .card-body
        table.table#mobile-table
          thead
            tr.text-center.small.text-muted
              th.text-left Item
              //- th &nbsp;
              th Amount
              th Price
              th Total
          tbody
            each item, index in cart.items
              tr.text-center
                td.text-left.px-1.float-left
                  a(href='/viewproduct=' + item.id)
                    img.checkout-img.img-fluid.img-thumbnail(src='../media/' + item.id + '-1.jpg')
                td.px-0.text-left.float-left
                  a(href='/viewproduct=' + item.id): h6.mb-0= item.name
                  if (processing)
                    a(href='/remove/' + item.id + '/all'): small.text-muted remove 
                td.clear(data-title='Amount:')
                  span=cart.amount[index]
                td(data-title='Price:')
                  span= '$' + item.price
                td.cst(data-title='Total:')
                  span $#{(item.price*cart.amount[index]).toFixed(2)}
  .col-xs-12.col-lg-4.mr-auto 
