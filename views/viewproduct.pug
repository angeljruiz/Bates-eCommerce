extends ../includes/layout.pug

append resources
  title Shark Reef Exotics
append body
  input#hid(type='hidden' value=id)
  .col-md-4.ml-auto
    - var i = 0;
    while i < pics
      - i++;
      .slides
        img.slide-img.rounded(src='../media/' + id + '-' + i + '.jpg')
    a.prev(onclick='move(-1)') &#10094;
    a.next.mr-3(onclick='move(1)') &#10095;
    .row.my-1
      - i = 0;
      while i < pics
        - i++;
        .column.mr-3
          img.demo.thumb-img.rounded(src='../media/' + id + '-' + i + '.jpg' style='width:100%' onclick='currentSlide(' + i + ')')
  .col-md-4.mr-auto
    .card
      .ml-3
        .card-title.mt-3: h2= name
          h4.text-muted $#{price}
        br
        .row.mb-3
          .qty-input.mr-3.rounded
            i.less.rounded -
            input(type="number" value="1" readonly)
            i.more.rounded +
          a.btn.btn-primary#atc(href='/addtocart/' + id + '/1') Add to cart        
append footer
  script(src='../js/counter.js')
